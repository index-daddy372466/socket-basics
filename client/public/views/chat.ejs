<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= room %> room</title>
  </head>
  <%- include('./partials/css/chat.ejs') %>
  <body>
    <!-- nav/header -->
    <%- include('./partials/nav/chat.ejs')%>

    <!-- chatbox -->
    <ul id="chats" class="messages">
      <div id="type-container">
        <!-- blinky/typing -->
        <!-- keyboard -->
        <svg
          class="type-hidden"
          id="type-keyboard"
          xmlns="http://www.w3.org/2000/svg"
          height="50px"
          viewBox="0 -960 960 960"
          width="50px"
          fill="#5f6368"
        >
          <path
            d="M160-200q-33 0-56.5-23.5T80-280v-400q0-33 23.5-56.5T160-760h640q33 0 56.5 23.5T880-680v400q0 33-23.5 56.5T800-200H160Zm0-80h640v-400H160v400Zm160-40h320v-80H320v80ZM200-440h80v-80h-80v80Zm120 0h80v-80h-80v80Zm120 0h80v-80h-80v80Zm120 0h80v-80h-80v80Zm120 0h80v-80h-80v80ZM200-560h80v-80h-80v80Zm120 0h80v-80h-80v80Zm120 0h80v-80h-80v80Zm120 0h80v-80h-80v80Zm120 0h80v-80h-80v80ZM160-280v-400 400Z"
          />
        </svg>
      </div>
      <div id="typing-users" class="users-typing typers">
        <p class="typing-para para-typing"></p>
      </div>
    </ul>

    <!-- form (chat & send chat) -->
    <form action="" id="form">
      <input type="text" id="text" />
      <input type="submit" id="submit" />
    </form>

    <!-- inject clientside io -->
    <script src="/socket.io/socket.io.js"></script>
    <%- include('./partials/js/chat.ejs') %>
  </body>
</html>
