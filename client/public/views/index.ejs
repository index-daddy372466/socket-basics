  <%- include('./partials/css/index.ejs')%>

  <style>
  input[type="submit"]:hover{
	background:#000;
	color:#fff;
        transition:.25s;
}
 </style>
  <body>
    <h1>Login</h1>
    <form action="/login-attempt" method="POST" id="login">
      <input style="outline:none;margin:.75rem 0;padding:.5rem 1rem;border-radius:20px;border:none;box-shadow:0 .25rem 6px .75px #333;" type="text" name="username" class="login-info" />
      <input type="submit" style="transition:.75s;border-radius:12px;padding:.5rem 1rem;font-size:14px;border:none;cursor:pointer;" onclick="(e)=>e.preventDefault()" />
    </form>
    <%- include('./partials/js/index.ejs')%>
  </body>
