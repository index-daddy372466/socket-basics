<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, Helvetica, sans-serif;
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
    -khtml-user-select: none; /* Konqueror HTML */
    -moz-user-select: none; /* Old versions of Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none; /* Non-prefixed version, currently
                                      supported by Chrome, Edge, Opera and Firefox */
  }

  body {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  #container {
    background: #333;
    height: 100vh;
    width: 100%;
  }
  .tile {
    background: #fff;
    border-radius: 12px;
    cursor: pointer;
    position: Fixed;
    overflow: hidden;
    scroll-behavior: smooth;
    box-shadow: 0 0 3px 2.5px #333;
  }
	
  #tile3 {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
  #tile3 > .parent {
    height: 50%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: end;
  }
  #tile3 > form {
    height: 50%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: start;
    gap: 1rem;
  }
  .align-li {
    box-shadow: 0 0.25rem 6px 0.75px #333;
    text-align: center;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    list-style: none;
    transition: 0.75s;
    padding: 1rem 1rem;
    font-size: 18px;
    border-radius: 12px;
  }
  .align-li:hover {
    box-shadow: 0 0 transparent;
    transition: 0.25s;
    color: #fff;
    background: #000;
  }
  #form > #text-input {
    padding: 0.25rem;
    width: 75%;
    font-size: 18px;
    text-align: center;
    border-radius: 12px;
    border: none;
    outline: none;
    background: silver;
    box-shadow: inset 0 0 4px 1.5px #6f6969;
  }
  #form > button {
    height: 50px;
    width: 50px;
    border-radius: 12px;
    background: purple;
    color: #fff;
    font-size: 25px;
    font-weight: bold;
    border: none;
    cursor: pointer;
    transition: 0.5s;
    filter: drop-shadow(1px 3px 1.5px rgb(0, 0, 0));
    -webkit-filter: drop-shadow(1px 3px 1.5px rgb(0, 0, 0));
    -webkit-filter: drop-shadow(1px 3px 1.5px rgb(0, 0, 0));
    outline: none;
  }
  #logout-btn {
    z-index: 998;
  }
  #logout-btn > a {
    transition: 0.75s;
    z-index: 999;
    text-decoration: none;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 12px;
    background: #000;
    cursor: pointer;
  }
  #logout-btn > a:hover {
    transition: 0.25s;
    background: #fff;
    color: #000;
  }

  #intake {
    margin: 0.5rem 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: start;
    overflow: hidden;
    scroll-behavior: smooth;
    overflow-y: scroll;
    gap: 0.25rem;
  }

  #form > button:hover {
    filter: none;
    height: 49px;
    width: 49px;
    transition: 0.25s;
  }
  .tile {
    height: 50%;
  }

  @media screen and (max-width: 450px) {
    .tile {
      height: 50%;
      transform: scale(0.9);
    }

    .create-room,
    .existing-room {
      font-size: 18px;
    }
    #intake > li {
      font-size: 14px;
    }
  }
</style>
