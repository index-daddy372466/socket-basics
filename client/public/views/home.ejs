<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chat rooms</title>
  </head>
  
  <%- include('./partials/css/home.ejs')%>

  <body>
    <div id="container">
      <!-- nav/header -->
      <%- include('./partials/nav/home.ejs')%>
      <div id="tile1" class="tile"></div>
      <div id="tile2" class="tile">
        <h1 class="existing-room" style="text-align: center;marign-top:1rem;background:#000;color:#fff;text-decoration: underline">Rooms</h1>
        <ul id="intake"></ul>
      </div>
      <div id="tile3" class="tile">
        <div class="parent">
          <h1 class="create-room room-create" style="text-align: center;">Create a Room</h1>
        </div>
        <form action="/create/room" method="POST" id="form">
          <input type="text" name="room" id="text-input" minlength="3" />
          <button type="submit">+</button>
        </form>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <%- include('./partials/js/home.ejs')%>
  </body>
</html>
